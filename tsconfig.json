{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*.ts",
    "prisma/**/*.ts",
    "tests/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "moduleResolution": "node"
}
